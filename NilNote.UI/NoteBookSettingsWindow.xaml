<Window x:Class="NilNote.UI.NoteBookSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NilNote.UI"
        mc:Ignorable="d"
        Title="Notebook Settings"  SizeToContent="Height" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="Default Language" Grid.Row="0" Grid.Column="0"></Label>
        <ComboBox Grid.Row="0" Grid.Column="1" Margin="5">
            <ComboBoxItem Content="Engilsh" IsSelected="True"></ComboBoxItem>
        </ComboBox>
        <Label Content="Default Syntax" Grid.Row="1" Grid.Column="0"></Label>
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="5">
            <ComboBoxItem Content="Plain text" IsSelected="True"></ComboBoxItem>
            <ComboBoxItem Content="Markdown" IsSelected="True"></ComboBoxItem>
        </ComboBox>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="Save" Margin="5"></Button>
            <Button Content="Cancel" Margin="5"></Button>
        </StackPanel>
    </Grid>
</Window>
